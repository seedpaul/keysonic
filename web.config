<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>

    <!-- Serve index.html by default -->
    <defaultDocument enabled="true">
      <files>
        <clear />
        <add value="index.html" />
      </files>
    </defaultDocument>

    <!-- Static files + simple dev-friendly caching -->
    <staticContent>
      <!-- Disable browser caching while you're developing.
           For production, replace with a max-age instead. -->
      <clientCache cacheControlMode="DisableCache" />

      <!-- Common types that IIS can be weird about on some setups -->
      <remove fileExtension=".json" />
      <mimeMap fileExtension=".json" mimeType="application/json" />

      <remove fileExtension=".map" />
      <mimeMap fileExtension=".map" mimeType="application/json" />

      <remove fileExtension=".svg" />
      <mimeMap fileExtension=".svg" mimeType="image/svg+xml" />

      <remove fileExtension=".webmanifest" />
      <mimeMap fileExtension=".webmanifest" mimeType="application/manifest+json" />
    </staticContent>

    <!-- No directory listing -->
    <directoryBrowse enabled="false" />

    <!-- Lightweight security headers (tweak as needed) -->
    <httpProtocol>
      <customHeaders>
        <add name="X-Content-Type-Options" value="nosniff" />
        <add name="X-Frame-Options" value="SAMEORIGIN" />
        <add name="X-XSS-Protection" value="1; mode=block" />
        <!--
        Example CSP (tighten later as you know your assets):
        <add name="Content-Security-Policy"
             value="default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' data:;" />
        -->
      </customHeaders>
    </httpProtocol>

  </system.webServer>
</configuration>
